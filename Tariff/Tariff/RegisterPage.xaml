<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tariff.RegisterPage"
             BackgroundColor="#112847"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout Padding="40" VerticalOptions="Center" HorizontalOptions="FillAndExpand">
            <Label Text="Регистрация" FontSize="25" HorizontalOptions="Center" TextColor="White"/>
            <Entry x:Name="LabelUsername" Placeholder="Логин" TextColor="White" PlaceholderColor="Gray"/>
            <Entry x:Name="LabelPhoneNumber" Placeholder="Номер телефона"  TextColor="White" PlaceholderColor="Gray"/>
            <Entry x:Name="LabelEmail" Placeholder="Почта" TextColor="White" PlaceholderColor="Gray"/>
            <Entry x:Name="LabelPassword" Placeholder="Пароль" IsPassword ="True" TextColor="White" PlaceholderColor="Gray"/>
            <Button 
                VerticalOptions="Center"
                Text="Создать" 
                TextColor="White" 
                BackgroundColor="Transparent" 
                BorderWidth="1.5" 
                CornerRadius="50" 
                BorderColor="ForestGreen"
                Clicked="Button_Clicked"
                />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>