    </ContentPage>

    <ContentPage Title="История" IconImageSource="History.png">
        <ScrollView>
            <StackLayout x:Name ="StackHistory" Padding="20" VerticalOptions="FillAndExpand">
                <Label Text="История показаниий" FontSize="25" HorizontalOptions="Center" TextColor="White" Margin="10"/>
            </StackLayout>
        </ScrollView>
    </ContentPage>


    <ContentPage Title="Аккаунт" IconImageSource="Acount.png">
        <StackLayout Padding="40" VerticalOptions="Center" HorizontalOptions="FillAndExpand">
            <Label Text="Профиль" FontSize="25" HorizontalOptions="Center" TextColor="White" Margin="20"/>

            <Frame BackgroundColor="#0a193d" CornerRadius="20" Padding="10">
                <Grid Padding="20" RowSpacing="20">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width ="*"/>
                        <ColumnDefinition Width ="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Text="Имя" FontSize="20" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center"/>
                    <Entry Grid.Column="1" x:Name="LabelName" TextColor="White" FontSize="20"/>

                    <Label Grid.Row="1" Text="Почта" FontSize="20" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center"/>
                    <Entry Grid.Row="1" Grid.Column="1" x:Name="LabelEmail" TextColor="White" FontSize="20"/>

                    <Label Grid.Row="2" Text="Номер" FontSize="20" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center"/>
                    <Entry Grid.Row="2" Grid.Column="1" x:Name="LabelPhoneNumber" TextColor="White" FontSize="20"/>

                    <Label Grid.Row="3" Text="Номер" FontSize="20" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center"/>
                    <Entry Grid.Row="2" Grid.Column="1" x:Name="LabelHWTarif" TextColor="White" FontSize="20"/>

                    <Button Grid.Row="3" Grid.ColumnSpan="2" Text="Изменить данные" BorderWidth="1.5"  Padding="20" FontSize="15" CornerRadius="50" 
                        BackgroundColor="ForestGreen" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" Clicked="Button_Clicked_1"/>

                </Grid>

